<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/textViewTrackTitleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_grey_200"
        app:layout_constraintEnd_toStartOf="@+id/textViewTrackDurationItem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/imageViewArtworkItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewArtworkItem"
        />
    <TextView
        android:id="@+id/textViewTrackDurationItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/color_grey_300"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewTrackTitleItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewTrackTitleItem"
        />
    <TextView
        android:id="@+id/textViewArtistNameItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_grey_400"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/textViewTrackTitleItem"
        app:layout_constraintStart_toStartOf="@+id/textViewTrackTitleItem"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrackTitleItem"
        />
    <ImageView
        android:id="@+id/imageViewArtworkItem"
        android:layout_width="@dimen/artwork_playlist_item_height"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@string/dimension_ratio_1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</android.support.constraint.ConstraintLayout>
